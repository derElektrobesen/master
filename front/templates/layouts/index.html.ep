%= javascript begin
    function logout() {
        var f = function () {
            window.location.href = '<%= $general_url %>/';
        };
        $.ajax({
            method: 'get',
            url: '<%= $general_url %>/cgi-bin/logout',
            success: f,
            error: f,
        });
    }
% end

<body>
	<header>
		<div class="container_12">
			<div class="grid_12">
				<div class="wrapper">
                    <a href="<%= $general_url %>" class="logo">design.maniacs</a>
					<nav>
						<ul class="menu">
                            <li <%= stash('url') eq '/' ? 'class=active' : '' %>><a href="<%= $general_url %>/">about</a></li>
							<li <%= stash('url') eq '/orders' ? 'class=active' : '' %>><a href="<%= $general_url %>/orders">orders</a></li>
							<li <%= stash('url') eq '/track' ? 'class=active' : '' %>><a href="<%= $general_url %>/track">track</a></li>

                            <li <%= stash('url') eq '/login' ? 'class=active' : '' %>>
% if ($logged_in) {
                                <a><%= ucfirst($lastname || '') . ' ' . ucfirst($name || '') %></a>
                                <a href="#" onclick="logout(); return false;">sign out</a>
% } else {
                                <a href="<%= $general_url %>/login">sign in</a>
                            </li>
                            <li <%= stash('url') eq '/register' ? 'class=active' : '' %>>
                                <a href="<%= $general_url %>/register">sign up</a>
% }
                            </li>
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</header>
	<div id="content">
		<%= content %> <!-- code will be inserted here -->
	</div>
	<footer>
		<div class="container_12">
			<div class="wrapper">
				<div class="grid_8">
					Design Maniacs &copy; 2013 &nbsp;  | &nbsp;  Website Template designed by <a href="http://www.bayguzin.ru" class="link">bayguzin.ru</a>
				</div>
				<div class="grid_4">
					<div class="social">
						My Social:<a href="#"><img src="<%= $general_url %>/images/facebook-icon.png" alt=""></a><a href="#"><img src="images/twitter-icon.png" alt=""></a>
					</div>
				</div>
			</div>
		</div>
	</footer>
</body>
</html>
