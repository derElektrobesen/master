% if ($logged_in) {
%= javascript begin
    function logout() {
        var f = function () {
            window.location.href = '<%= $general_url %>/';
        };
        $.ajax({
            method: 'get',
            url: '<%= $general_url %>/cgi-bin/logout',
            success: f,
            error: f,
        });
    }
% end
% }

<body>
	<header>
		<div class="container_12">
			<div class="grid_12">
				<div class="wrapper">
                    <a href="<%= $general_url %>" class="logo">J.W Couriers</a>
					<nav>
						<ul class="menu">
                            <li <%= stash('url') eq '/about' ? 'class=active' : '' %>><a href="<%= $general_url %>/about">about</a></li>

% if ($logged_in) {

% if ($role eq 'user') {
							<li <%= stash('url') eq '/orders' ? 'class=active' : '' %>><a href="<%= $general_url %>/orders">orders</a></li>
% } elsif ($role eq 'manager') {
							<li <%= stash('url') eq '/cargo' ? 'class=active' : '' %>><a href="<%= $general_url %>/cargo">cargo</a></li>
							<li <%= stash('url') eq '/manage' ? 'class=active' : '' %>><a href="<%= $general_url %>/manage">manage orders</a></li>
% } elsif ($role eq 'admin') {
							<li <%= stash('url') eq '/users' ? 'class=active' : '' %>><a href="<%= $general_url %>/users">users</a></li>
							<li <%= stash('url') eq '/register' ? 'class=active' : '' %>><a href="<%= $general_url %>/register">register</a></li>
% }
                            <li>
                                <a><%= ucfirst($lastname || '') . ' ' . ucfirst($name || '') %></a>
                                <a href="#" onclick="logout(); return false;">sign out</a>
                            </li>
% } else { # unauthorized
                            <li <%= stash('url') eq '/login' ? 'class=active' : '' %>>
                                <a href="<%= $general_url %>/login">sign in</a>
                            </li>
                            <li <%= stash('url') eq '/register' ? 'class=active' : '' %>>
                                <a href="<%= $general_url %>/register">sign up</a>
                            </li>
% }
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</header>
	<div id="content">
		<%= content %> <!-- code will be inserted here -->
	</div>
	<footer>
		<div class="container_12">
			<div class="wrapper">
				<div class="grid_8">
					Designed by Olga Kosyura & Pavel Berezhnoy 2015
				</div>
				<div class="grid_4">
					
				</div>
			</div>
		</div>
	</footer>
%= javascript begin
(function($) {
    $(function() {
        $('.report-request-form div select, .tab-content input').styler();
    })
})(jQuery)
% end
</body>
</html>
